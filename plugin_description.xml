<library path="lib/libmtracker_gui">
  
  <class name="Manual Controller"
         type="mtracker_gui::ManualControllerPanel"
         base_class_type="rviz::Panel">
    <description>
      Panel used for changing the manual controller gains and activating keyboard/joystick inputs.
    </description>
  </class>

  <class name="Automatic Controller"
         type="mtracker_gui::AutomaticControllerPanel"
         base_class_type="rviz::Panel">
    <description>
      Panel used for changing the automatic controller gains.
    </description>
  </class>

  <class name="Controls Scaling"
         type="mtracker_gui::ControlsScalingPanel"
         base_class_type="rviz::Panel">
    <description>
      Panel used for activating and changing the value of maximal wheel rate.
    </description>
  </class>
